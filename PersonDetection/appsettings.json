{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "PersonDetection": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=DetectionContext;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "DetectionConfig": {
    "ConfidenceThreshold": 0.25,
    "NmsThreshold": 0.45,
    "MinWidth": 12,
    "MinHeight": 25,
    "ModelInputSize": 640,
    "YoloModelPath": "Models/yolo11s.onnx",
    "ReIdModelPath": "Models/osnet_x1_0.onnx",
    "UseGpu": false
  },
  "IdentityConfig": {
    "DistanceThreshold": 0.25,
    "MinDistanceForNewIdentity": 0.15,
    "GlobalMatchThreshold": 0.20,
    "SimilarityThreshold": 0.80,
    "MinSeparationRatio": 1.05,
    "CacheExpirationMinutes": 10,
    "UpdateVectorOnMatch": false,
    "UseAdaptiveThreshold": false,
    "RequireMinimumSeparation": false,
    "MaxIdentitiesInMemory": 500,
    "MinCropWidth": 12,
    "MinCropHeight": 25,

    "EnableGlobalMatching": false,
    "LoadFromDatabaseOnStartup": false,
    "DatabaseLoadHours": 0,

    "OnlyMatchActiveIdentities": true,
    "ActiveIdentityTimeoutSeconds": 20,
    "TreatAmbiguousAsNew": true,

    "EnableIdentityConsolidation": false,
    "ConsolidationThreshold": 0.10,

    "ConfirmationMatchCount": 1,
    "AmbiguousMatchAsConfirmed": true,
    "EnableConfidenceBasedConfirmation": true,
    "MinConfidenceForConfirmation": 0.25,
    "MinHighConfidenceDetections": 1,
    "FastWalkerTimeWindowSeconds": 10.0,
    "EnableFastWalkerMode": true,
    "InstantConfirmConfidence": 0.30,

    "EnableTemporalMatching": true,
    "MaxSecondsForActiveMatch": 15,
    "MaxMinutesForRecentMatch": 1,
    "PenaltyForStaleMatch": 0.50,
    "EnableEntryZoneDetection": true,
    "EntryZoneMarginPercent": 25,
    "RequireRecentActivityForMatch": true,
    "NewPersonBonusDistance": 0.15,
    "MatchStabilityFrames": 1
  },
  "StreamingConfig": {
    "ReIdEveryNFrames": 1,
    "FrameBufferSize": 2,
    "TargetFps": 25,
    "ReconnectDelayMs": 3000,
    "MaxReconnectAttempts": 5,
    "JpegQuality": 80,
    "ProcessingIntervalMs": 40,
    "DetectionIntervalMs": 50,
    "ResizeWidth": 1280,
    "ResizeHeight": 720,
    "SkipFrames": 0,
    "UseHardwareAcceleration": true,
    "EnableFastOverlay": true,
    "OverlayFontScale": 0.5,
    "OverlayThickness": 2,
    "ShowConfidence": true,
    "ShowTrackId": true
  },
  "PersistenceConfig": {
    "SaveToDatabase": true,
    "SaveIntervalSeconds": 2,
    "OnlyOnCountChange": false,
    "MinCountChangeThreshold": 1,
    "MaxStoredResults": 1000,
    "CleanupIntervalMinutes": 60,
    "BatchSaveEnabled": true,
    "BatchSize": 10
  },
  "SignalRConfig": {
    "MaximumReceiveMessageSize": 102400,
    "KeepAliveIntervalSeconds": 15,
    "ClientTimeoutSeconds": 30
  }
}