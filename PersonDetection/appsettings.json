{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "PersonDetection": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=DetectionContext;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "DetectionConfig": {
    "ConfidenceThreshold": 0.30,
    "NmsThreshold": 0.45,
    "MinWidth": 15,
    "MinHeight": 30,
    "ModelInputSize": 640,
    "YoloModelPath": "Models/yolo11s.onnx",
    "ReIdModelPath": "Models/osnet_x1_0.onnx",
    "UseGpu": false
  },
  "IdentityConfig": {
    "DistanceThreshold": 0.35,
    "MinDistanceForNewIdentity": 0.20,
    "GlobalMatchThreshold": 0.30,
    "SimilarityThreshold": 0.75,
    "MinSeparationRatio": 1.15,
    "CacheExpirationMinutes": 30,
    "UpdateVectorOnMatch": false,
    "UseAdaptiveThreshold": true,
    "RequireMinimumSeparation": false,
    "MaxIdentitiesInMemory": 500,
    "MinCropWidth": 20,
    "MinCropHeight": 40,
    "EnableGlobalMatching": true,
    "LoadFromDatabaseOnStartup": true,
    "DatabaseLoadHours": 4,
    "EnableIdentityConsolidation": false,
    "ConsolidationThreshold": 0.10,
    "ConfirmationMatchCount": 2,
    "AmbiguousMatchAsConfirmed": true,
    "EnableConfidenceBasedConfirmation": true,
    "MinConfidenceForConfirmation": 0.55,
    "MinHighConfidenceDetections": 2,
    "FastWalkerTimeWindowSeconds": 8.0,
    "EnableFastWalkerMode": true,

    "EnableTemporalMatching": true,
    "MaxSecondsForActiveMatch": 60,
    "MaxMinutesForRecentMatch": 10,
    "PenaltyForStaleMatch": 0.15,
    "EnableEntryZoneDetection": true,
    "EntryZoneMarginPercent": 15,
    "RequireRecentActivityForMatch": true,
    "NewPersonBonusDistance": 0.08,
    "MatchStabilityFrames": 3
  },
  "StreamingConfig": {
    "ReIdEveryNFrames": 1,
    "FrameBufferSize": 2,
    "TargetFps": 25,
    "ReconnectDelayMs": 3000,
    "MaxReconnectAttempts": 5,
    "JpegQuality": 80,
    "ProcessingIntervalMs": 40,
    "DetectionIntervalMs": 50,
    "ResizeWidth": 1280,
    "ResizeHeight": 720,
    "SkipFrames": 0,
    "UseHardwareAcceleration": true,

    "EnableFastOverlay": true,
    "OverlayFontScale": 0.5,
    "OverlayThickness": 2,
    "ShowConfidence": true,
    "ShowTrackId": true
  },
  "PersistenceConfig": {
    "SaveToDatabase": true,
    "SaveIntervalSeconds": 3,
    "OnlyOnCountChange": false,
    "MinCountChangeThreshold": 1,
    "MaxStoredResults": 1000,
    "CleanupIntervalMinutes": 60,
    "BatchSaveEnabled": true,
    "BatchSize": 10
  },
  "SignalRConfig": {
    "MaximumReceiveMessageSize": 102400,
    "KeepAliveIntervalSeconds": 15,
    "ClientTimeoutSeconds": 30
  }
}